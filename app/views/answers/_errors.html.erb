<center>
	<%- if answer.errors.any? %>
		<div id="error_explanation">
		    <h2><%= pluralize(answer.errors.count, "erro") %> - Não foi possível realizar a operação!</h2>
			<ul>
				<%- answer.errors.full_messages.each do |message| %>
				  <li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
</center>
