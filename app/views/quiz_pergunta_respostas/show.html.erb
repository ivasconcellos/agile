<div class="card">

  <div class="card-header">Respostas pergunta</div>

  <ul class="list-group">
    <li class="list-group-item"><b>Descrição:</b> <%= @quiz_pergunta_resposta.descricao %></li>
    <li class="list-group-item"><b>Comentário:</b> <%= @quiz_pergunta_resposta.comentario %></li>
    <li class="list-group-item"><b>Correta:</b> <%= @quiz_pergunta_resposta.correta? ? 'Sim' : 'Não' %></li>
    <li class="list-group-item"><b>Cadastrada em:</b> <%= @quiz_pergunta_resposta.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></li>     
  </ul>

  <br>

  <div class="card-footer text-muted">
    <% if can? :edit, QuizPerguntaResposta %>
      <%= link_to 'Atualizar', edit_quiz_pergunta_resposta_path(@quiz_pergunta_resposta), class: "btn btn-md btn-primary" %>
    <% end %>
    <%= link_to 'Voltar', :back, class: "btn btn-md btn-secondary" %>
  </div>
</div>
