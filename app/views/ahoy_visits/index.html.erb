<div class="card">
  <div class="card-header">Acessos ao AGILE</div> 


  <%= search_form_for @q, url: ahoy_visits_path do |f| %>

    <div class="card-body">

      <div class="row">
        <div class="col-lg-4">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Nome</span>
            </div>
            <%= f.search_field :nome_cont, :class => 'form-control'  %>
          </div>
        </div>

        <div class="col-lg-3">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">CPF</span>
            </div>
            <%= f.search_field :cpf_cont, :class => 'form-control'  %>
          </div>
        </div>

        <div class="col-lg-5">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">E-mail</span>
            </div>
            <span class="input-group-text borda">
              <%= f.search_field :email_cont, :class => 'form-control' %>
            </span>
          </div>
        </div>
      </div>     
    </div>
    
    <div class="text-center">
      <button class="btn btn-primary link search-btn" ><% submit_tag "" %>Pesquisar</button>
    </div>
  <% end %>
    
  <% if !@usuarios.empty? %>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th class="text-center">Nome</th>
            <th class="text-center">CPF</th>
            <th class="text-center">E-mail</th>
            <th colspan="1" class="text-center">Visualizar</th>
          </tr>
        </thead>
        <tbody>
          <% @usuarios.each do |usuario| %>
            <tr>
              <td><%= usuario.nome %></td>
              <td><%= usuario.cpf %></td>
              <td><%= usuario.email %></td>
              <td><%= link_to 'Visualizar',{controller: 'ahoy_visits', action: 'show', :id => usuario.id}  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <span> <%= will_paginate @usuarios %></span>
  <% end %>
    
  <br>
  
  <div class="card-footer text-muted">
    <%= link_to 'Voltar', controle_gestor_path, class: "btn btn-md btn-secondary" %>
  </div>
    
</div>
  
  
  