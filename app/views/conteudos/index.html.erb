<p id="notice"><%= notice %></p>

<h1>Conteudos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Curso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conteudos.each do |conteudo| %>
      <tr>
        <td><%= conteudo.nome %></td>
        <td><%= conteudo.descricao %></td>
        <td><%= conteudo.curso %></td>
        <td><%= link_to 'Show', conteudo %></td>
        <td><%= link_to 'Edit', edit_conteudo_path(conteudo) %></td>
        <td><%= link_to 'Destroy', conteudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

