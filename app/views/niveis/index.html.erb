<div class="card">
  <div class="card-header">Níveis</div>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th class="text-center">Nome</th>
          <th>Pontos requeridos</th>
          <th colspan="3" class="text-center">Opções</th>
        </tr>
      </thead>
      <tbody>
        <% @niveis.each do |nivel| %>
          <tr>
            <td><%= nivel.nome %></td>
            <td><%= nivel.pontos_requeridos %></td>
            <td><%= link_to 'Visualizar', nivel %></td></td>
            <td>
              <% if can? :edit, Nivel %>
                <%= link_to 'Atualizar', edit_nivel_path(nivel) %></td>
              <% else%> - 
              <% end %>
            <td>
              <% if can? :Destroy, Nivel %>
                <%= link_to 'Excluir', nivel, method: :delete, data: { confirm: 'Deseja realmente excluir o Nível?' } %></td>
              <% else%> - 
              <% end %>
            </tr>
            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <span> <%= will_paginate @niveis %></span>

  <br>

  <% if can? :new, Nivel %>
    <div class="card-footer text-muted">
      <%= link_to 'Cadastrar Nível', new_nivel_path, class: "btn btn-md btn-primary" %>
      <%= link_to 'Voltar', controle_gestor_path, class: "btn btn-md btn-secondary" %>
    </div>
  <% end %>

</div>