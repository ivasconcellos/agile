<div class="card">

	<div class="card-header">Nível
	    <% if can? :edit, Nivel %>
	      <%= link_to '', edit_nivel_path(@nivel), class: "fa fa-edit text-white" %>
	    <% end %>
	    <% if can? :destroy, Nivel %>
	      <%= link_to '', @nivel, method: :delete, data: { confirm: 'Deseja realmente excluir o Nível?' }, class: "fa fa-trash text-white" %>
	    <% end %>
	</div>

  	<div class="card-body">

		<div class="row">

		  <div class="col-lg-4">
		    <div class="input-group mb-3">
		      <%= image_tag @nivel.imagem.variant(resize: "300x300"), class: "img-responsive img-thumbnail" %>
		    </div>
		  </div>

		  <div class="col-lg-8">

		    <div class="input-group mb-3">
		      <p>
		        <label>Nome: </label>          
		        <%= @nivel.nome %>
		      </p>
		    </div>

		    <div class="input-group mb-3">
		      <p>
		        <label>Pontos requeridos: </label>          
		        <%= @nivel.pontos_requeridos %>
		      </p>
		    </div>

		    <div class="input-group mb-3">
		      <p>
		        <label>Cadastrado em: </label>          
		        <%= @nivel.created_at.strftime("%d/%m/%Y - %H:%M:%S") %>
		      </p>
		    </div>

		    <div class="input-group mb-3">
		      <p>
		        <label>Atualizado em: </label>          
		        <%= @nivel.updated_at.strftime("%d/%m/%Y - %H:%M:%S") %>
		      </p>
		    </div>

		  </div>

		</div>
	</div>

	<br>

	<div class="card-footer text-muted">
	  <%= link_to 'Voltar', niveis_path, class: "btn btn-md btn-secondary" %>
	</div>
</div>
