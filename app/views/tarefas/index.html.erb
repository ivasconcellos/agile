<div class="card">

  <div class="card-header">Tarefas </div>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th class="text-center">Módulo</th>
          <th class="text-center">Descrição</th>
          <th class="text-center">Pontuação</th>
          <th class="text-center">Público</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @tarefas.each do |tarefa| %>
          <tr>
            <td><%= tarefa.modulo.nome %></td>
            <td><%= tarefa.descricao %></td>
            <td><%= tarefa.pontuacao %></td>
            <td><%= tarefa.publico? ? 'Sim' : 'Não' %></td>
            <% if can? :show, Tarefa %>
              <td><%= link_to 'Visualizar', tarefa %></td>
            <% end %>
            <% if can? :edit, Tarefa %>
              <td><%= link_to 'Atualizar', edit_tarefa_path(tarefa) %></td>
            <% end %>
            <% if can? :destroy, Tarefa %>
              <td><%= link_to 'Excluir', tarefa, method: :delete, data: { confirm: 'Deseja realmente excluir a Tarefa?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <span> <%= will_paginate @tarefas %></span>

  <br>
  <% if can? :new, Tarefa %>
    <div class="card-footer text-muted">
      <%= link_to 'Cadastrar Tarefa', {controller: 'tarefas', action: 'new'}, class: "btn btn-md btn-primary" %>
    </div>
  <% end %>
</div>
