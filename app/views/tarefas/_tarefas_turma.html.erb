<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead class="thead-dark">
      <tr>
        <th class="text-center">Aluno</th> 
        <th class="text-center">Pontuação máxima</th>
        <th class="text-center">Nota</th>
        <th class="text-center">Enviada</th> 
        <th class="text-center">Avaliada</th>        
      </tr>
    </thead>
    <tbody>
      <% UsuarioCurso.where("curso_id = ? and perfil = ?", @perfil.curso.id, "Aluno").order('nickname').each do |aluno| %>
        <tr>
          <td><%= link_to aluno.nickname, notas_aluno_url(aluno_id: aluno.id, curso_id: tarefa.missao.modulo.curso.id) %></td>
          <td><%= formata_pontos(tarefa.missao.pontuacao) %></td>
          <td><%= minha_nota(tarefa.id, aluno.id) %></td>
          <td><%= enviada(tarefa.id, aluno.id) %></td>
          <td><%= avaliada(tarefa.id, aluno.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>