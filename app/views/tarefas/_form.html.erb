<%= form_with(model: tarefa, local: true) do |form| %>
  <% if tarefa.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(tarefa.errors.count, "erro(s)") %> Missão (Tarefa) não pôde ser salva!</h2>

      <ul>
      <% tarefa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :missao_id %>
  <%= form.hidden_field :usuario_curso_id %>

  <div class="card-body">

    <% if not @tarefa.missao_id %>

      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Missão*</label>
        <div class="col-md-6">
          <%= form.collection_select(:missao_id, Missao.joins(:modulo).where('modulos.curso_id = ?', current_usuario.curso_atual).order('nome'), :id, :nome, :prompt => true, class: "form-control") %>
        </div>
      </div>
    <% end %>

    <div class="form-group row">
        <label for="inputTexto" class="col-md-2 offset-md-2 col-form-label">Nome*</label>
        <div class="col-md-6">
        <%= form.text_field :nome, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputTexto" class="col-md-2 offset-md-2 col-form-label">Descrição*</label>
        <div class="col-md-6">
        <%= form.cktext_area :descricao, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataInicio" class="col-md-2 offset-md-2 col-form-label">Data de início*</label>
      <div class="col-md-2">
        <%= form.date_field :data_inicio, value: @tarefa.data_inicio.try(:strftime,"%Y-%m-%d"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataInicio" class="col-md-2 offset-md-2 col-form-label">Hora de início*</label>
      <div class="col-md-2">
        <%= form.time_field :hora_inicio, value: @tarefa.hora_inicio.try(:strftime,"%H:%M"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataTermino" class="col-md-2 offset-md-2 col-form-label">Data de término*</label>
      <div class="col-md-2">
        <%= form.date_field :data_termino, value: @tarefa.data_termino.try(:strftime,"%Y-%m-%d"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataInicio" class="col-md-2 offset-md-2 col-form-label">Hora de término*</label>
      <div class="col-md-2">
        <%= form.time_field :hora_termino, value: @tarefa.hora_termino.try(:strftime,"%H:%M"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="form-check-label col-md-2 offset-md-2" for="gridCheck1">Público</label>
      <div class="col-md-2 ">
        <div class="form-check">
          <%= form.check_box :publico, class: "form-check-input" %> Sim
        </div>
      </div>        
    </div>

  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', :back, class: "btn btn-md btn-secondary" %>
  </div>
<% end %>
