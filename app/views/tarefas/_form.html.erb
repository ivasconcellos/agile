<%= form_with(model: tarefa, local: true) do |form| %>
  <% if tarefa.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(tarefa.errors.count, "erro(s)") %> Tarefa não pôde ser salva!</h2>

      <ul>
      <% tarefa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :missao_id %>
  
  <div class="card-body">

    <div class="form-group row">
        <label for="inputTexto" class="col-md-2 offset-md-2 col-form-label">Nome*</label>
        <div class="col-md-6">
        <%= form.text_field :nome, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputTexto" class="col-md-2 offset-md-2 col-form-label">Descrição*</label>
        <div class="col-md-6">
        <%= form.cktext_area :descricao, class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', :back, class: "btn btn-md btn-secondary" %>
  </div>
<% end %>
