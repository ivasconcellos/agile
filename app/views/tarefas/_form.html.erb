<div class="card-body">

<%= form_with(model: tarefa, local: true) do |form| %>
  <% if tarefa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tarefa.errors.count, "error") %> prohibited this tarefa from being saved:</h2>

      <ul>
      <% tarefa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form.hidden_field :conteudo_id %>
<%= hidden_field_tag 'tarefa[usuario_curso_id]', @usuario_curso_id %>


  <div class="form-group row">
      <label for="inputTexto" class="col-md-2 offset-md-2 col-form-label">Texto*</label>
      <div class="col-md-6">
      <%= form.text_area :texto, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
      <label for="inputPontuacao" class="col-md-2 offset-md-2 col-form-label">Pontuação*</label>
      <div class="col-md-6">
      <%= form.text_field :pontuacao, class: "form-control" %>
    </div>
  </div>


  <div class="text-center">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', conteudos_path, class: "btn btn-md btn-secondary" %>
  </div>
</div>
<% end %>
