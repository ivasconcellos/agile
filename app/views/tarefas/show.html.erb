<div class="card">

  <div class="card-header">Missão - Tarefa</div>
  
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <ul class="list-group">
        <li class="list-group-item"><b>Missão:</b> <%= link_to @tarefa.missao.nome, @tarefa.missao %></li>
        <li class="list-group-item"><b>Descrição da Missão:</b> <%= @tarefa.missao.descricao.html_safe %></li>
         <li class="list-group-item"><b>Nome:</b> <%= @tarefa.nome %></li>
         <li class="list-group-item"><b>Descrição:</b> <%= @tarefa.descricao.to_s.html_safe %></li>
        <li class="list-group-item"><b>Pontuação:</b> <%= @tarefa.missao.pontuacao %></li>
        <li class="list-group-item"><b>Início da Tarefa:</b> <%= @tarefa.data_hora_inicio %></li>
        <li class="list-group-item"><b>Término da Tarefa:</b> <%= @tarefa.data_hora_termino %></li>
         <li class="list-group-item"><b>Criada por:</b> <%= @tarefa.usuario_curso.nickname %></li>
         <li class="list-group-item"><b>Criada em:</b> <%= @tarefa.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></li>
         <% if @tarefa_aluno %>
          <li class="list-group-item"><b>Visualizar envio:</b> <%= link_to 'Missão realizada (Tarefa enviada)', @tarefa_aluno %></li>
         <% end %>
      </ul>
    </div>
  </div>

  <div class="card-footer text-muted">
    <% if can? :edit, Tarefa %>
      <%= link_to 'Atualizar Tarefa', edit_tarefa_path(@tarefa), class: "btn btn-md btn-primary" %>
    <% end %>
    <% if @perfil.perfil == 'Aluno' and no_prazo(@tarefa) %>
      <%= link_to 'Enviar Tarefa', {controller: 'tarefa_alunos', action: 'new', tarefa_id: @tarefa.id}, class: "btn btn-md btn-warning" %>
    <% end %>
    <% if @tarefa_aluno and no_prazo(@tarefa) %>
      <%= link_to 'Atualizar Envio', edit_tarefa_aluno_path(@tarefa_aluno), class: "btn btn-md btn-danger" %>
    <% end %>
    <% if can? :new, AvaliacaoTarefa %>
      <%= link_to 'Visualizar Respostas', tarefa_alunos_path(id: @tarefa.id), class: "btn btn-md btn-warning" %>
    <% end %>
    <%= link_to 'Voltar', @tarefa.missao, class: "btn btn-md btn-secondary" %>
  </div>

</div>
