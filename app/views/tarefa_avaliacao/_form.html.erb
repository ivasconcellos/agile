<%= form_with(model: tarefa_avaliacao, local: true) do |form| %>
  <% if tarefa_avaliacao.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(tarefa_avaliacao.errors.count, "erro(s)") %> A Avaliação da Tarefa não pôde ser salva!</h2>

      <ul>
      <% tarefa_avaliacao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :tarefa_aluno_id %>
  <%= form.hidden_field :usuario_curso_id %>

  <div class="card-body">

    <div class="form-group row">
        <label for="inputPontuacao" class="col-md-2 offset-md-1 col-form-label">Descrição da Missão</label>
        <div class="col-md-8">
        <%= @tarefa_avaliacao.tarefa_aluno.tarefa.missao.descricao.to_s.html_safe %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputPontuacao" class="col-md-2 offset-md-1 col-form-label">Descrição da tarefa</label>
        <div class="col-md-8">
        <%= @tarefa_avaliacao.tarefa_aluno.tarefa.descricao.to_s.html_safe %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputPontuacao" class="col-md-2 offset-md-1 col-form-label">Pontuação máxima</label>
        <div class="col-md-8">
        <%= formata_pontos(@tarefa_avaliacao.tarefa_aluno.tarefa.missao.pontuacao) %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputPontuacao" class="col-md-2 offset-md-1 col-form-label">Nota*</label>
        <div class="col-md-2">
        <%= form.number_field :nota, step: :any, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputTexto" class="col-md-2 offset-md-1 col-form-label">Comentário</label>
        <div class="col-md-8">
        <%= form.text_area :comentario, class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', :back, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
