<%= form_with(model: pergunta_quiz, local: true) do |form| %>
  <% if pergunta_quiz.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(pergunta_quiz.errors.count, "erro(s)") %> - Pergunta do Quiz não pôde ser salva!</h2>

      <ul>
      <% pergunta_quiz.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :quiz_id %>

  <div class="card-body">

    <div class="form-group row">
      <label for="inputPontuacao" class="col-md-2 offset-md-4 col-form-label">Pontuação*</label>
      <div class="col-md-2">
        <%= form.number_field :pontuacao, step: :any, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <%= form.cktext_area :descricao, autofocus: true, class: "form-control" %>
      </div>
    </div>  
    
  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', pergunta_quiz.quiz, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
