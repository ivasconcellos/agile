<h2>Temas dos Cursos</h2>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Ativo</th>
        <th>Cor do t√≠tulo</th>
        <th>Cor do texto</th>
        <th>Cor do fundo</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @temas_cursos.each do |tema_curso| %>
        <tr>
          <td><%= tema_curso.nome %></td>
          <td><%= tema_curso.ativo %></td>
          <td><%= tema_curso.cor_titulo %></td>
          <td><%= tema_curso.cor_texto %></td>
          <% if can? :show, TemaCurso %>
            <td><%= link_to 'Visualizar', tema_curso %></td>
          <% end %>
          <% if can? :edit, TemaCurso %>
            <td><%= link_to 'Atualizar', edit_tema_curso_path(tema_curso) %></td>
          <% end %>
          <% if can? :destroy, TemaCurso %>
            <td><%= link_to 'Excluir', tema_curso, method: :delete, data: { confirm: 'Deseja realmente excluir o tema do curso?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if can? :new, TemaCurso %>
  <div class="text-center">
    <%= link_to 'Cadastrar Tema de Curso', new_tema_curso_path, class: "btn btn-md btn-primary" %>
  </div>
<% end %>


