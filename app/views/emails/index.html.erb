<div class="card">
  <div class="card-header">Professores do Curso</div>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th class="text-center">Nome</th>
          <th colspan="2" class="text-center">Opções</th>
        </tr>
      </thead>
      <tbody>
        <% @professores.each do |professor| %>
          <tr>
            <td><%= professor.nickname %></td>
            <td><%= link_to 'Enviar Mensagem (e-mail)', {controller: 'emails', action: 'new', professor_id: professor.id} %></td>
            <td>
              <% if can? :show, Email %>
                <%= link_to 'Ver mensagens enviadas', {controller: 'emails', action: 'emails_professor', professor_id: professor.id} %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>