<%= form_with(model: recompensa, local: true) do |form| %>
  <% if recompensa.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(recompensa.errors.count, "erro(s)") %> - Recompensa não pôde ser salva!</h2>

      <ul>
      <% recompensa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">  

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Posição no Ranking*</label>
      <div class="col-md-8">
        <%= form.number_field :posicao_ranking, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Nome*</label>
      <div class="col-md-8">
        <%= form.text_field :nome, class: "form-control" %>
      </div>
    </div>
  
    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Descrição</label>
      <div class="col-md-8">
        <%= form.cktext_area :descricao, class: "form-control"%>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', recompensas_path, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
