<%= form_for [@question_group, question] do |f| %>
	
	<% if question.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(question.errors.count, "erro(s)") %> - Pergunta não pôde ser salva!</h2>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= f.hidden_field :question_group_id %>

	<div class="card-body">

	    <div class="form-group row">
	      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Tipo*</label>
	      <div class="col-md-8">
	        <%= f.select :tipo, QuestionForm::QUESTION_TYPES, class: "form-control" %>
	      </div>
	    </div>

	    <div class="form-group row">
	      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Pergunta*</label>
	      <div class="col-md-8">
	        <%= f.text_field :pergunta, class: "form-control" %>
	      </div>
	    </div>

	    <div class="form-group row">
	      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Respostas*</label>
	      <div class="col-md-8">
	        <%= f.text_area :respostas, placeholder: "Uma opção por linha", class: "form-control" %>
	      </div>
	    </div>

	    <div class="form-group row">
	      <label class="form-check-label col-md-2 offset-md-1" for="gridCheck1">Resposta obrigatória?</label>
	      <div class="col-md-2 ">
	        <div class="form-check">
	          <%= f.check_box :answer_presence, class: "form-check-input" %> Sim
	        </div>
	      </div>        
	    </div>

	</div>

	<div class="card-footer text-muted">
	    <%= f.submit "Salvar", class: "btn btn-md btn-primary" %>
	    <%= link_to 'Voltar', {controller: "questions", action: 'index', question_group_id: @question.question_group_id}, class: "btn btn-md btn-secondary" %>
	</div>

<% end %>
