<!DOCTYPE html>
<html>
  <head>
    <title>Ava</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

   <% %w(bootstrap.min  application).each do |asset| %>
        <%= stylesheet_link_tag asset %>
    <% end %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'bootstrap.min'  %>
    
  </head>

  <body>

    
    

      
    <% if usuario_signed_in? %>

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Agile</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Meus cursos</a>
            </li>
          </ul>
          <div class="form-inline my-2 my-lg-0">
            <%= link_to edit_usuario_registration_path, @id => :usuario_id, class: 'btn btn-outline-success' do %>Atualizar Dados<% end %>
            <%= link_to destroy_usuario_session_path, :method => :delete, class: 'btn btn-outline-danger' do %>Sair<% end %>
          </div>
        </div>
      </nav>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    <% else %>
      <div class="form-signin">  
        <div class="text-center mb-4">
          <%= image_tag ("coelho2.png"), class: "mb-4 img-responsive", width: "100", height: "100" %>
          <h1 class="h3 mb-3 font-weight-normal">Agile</h1>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div> 
    <% end %>

  </body>
</html>
