<%= form_with(model: quiz, local: true) do |form| %>
  <% if quiz.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(quiz.errors.count, "erro(s)") %> - Quiz não pôde ser salvo!</h2>

      <ul>
      <% quiz.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :missao_id %>

  <div class="card-body">

    <% if not @quiz.missao_id %>

      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Missão*</label>
        <div class="col-md-6">
          <%= form.collection_select(:missao_id, Missao.joins(:modulo).where('modulos.curso_id = ?', current_usuario.curso_atual).order('nome'), :id, :nome, :prompt => true, class: "form-control") %>
        </div>
      </div>
    <% end %>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Nome*</label>
      <div class="col-md-6">
        <%= form.text_field :nome, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Descrição*</label>
      <div class="col-md-6">
        <%= form.text_area :descricao, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Máximo de tentativas*</label>
      <div class="col-md-6">
        <%= form.number_field :max_tentativas, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataInicio" class="col-md-2 offset-md-2 col-form-label">Data de início*</label>
      <div class="col-md-2">
        <%= form.date_field :data_inicio, value: @quiz.data_inicio.try(:strftime,"%Y-%m-%d"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataInicio" class="col-md-2 offset-md-2 col-form-label">Hora de início*</label>
      <div class="col-md-2">
        <%= form.time_field :hora_inicio, value: @quiz.hora_inicio.try(:strftime,"%H:%M"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataTermino" class="col-md-2 offset-md-2 col-form-label">Data de término*</label>
      <div class="col-md-2">
        <%= form.date_field :data_termino, value: @quiz.data_termino.try(:strftime,"%Y-%m-%d"), class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDataInicio" class="col-md-2 offset-md-2 col-form-label">Hora de término*</label>
      <div class="col-md-2">
        <%= form.time_field :hora_termino, value: @quiz.hora_termino.try(:strftime,"%H:%M"), class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', quizes_path, class: "btn btn-md btn-secondary" %>
  </div>
<% end %>
