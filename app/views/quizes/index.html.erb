<p id="notice"><%= notice %></p>

<h1>Quizes</h1>

<table>
  <thead>
    <tr>
      <th>Curso</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Max tentativas</th>
      <th>Usuario curso</th>
      <th>Data inicio</th>
      <th>Data termino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizes.each do |quiz| %>
      <tr>
        <td><%= quiz.curso %></td>
        <td><%= quiz.nome %></td>
        <td><%= quiz.descricao %></td>
        <td><%= quiz.max_tentativas %></td>
        <td><%= quiz.usuario_curso %></td>
        <td><%= quiz.data_inicio %></td>
        <td><%= quiz.data_termino %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

