<%= form_with(model: comunicado, local: true) do |form| %>
  <% if comunicado.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(comunicado.errors.count, "erro(s)") %> - Comunicado não pôde ser enviado!</h2>

      <ul>
      <% comunicado.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card-body">
    <%= form.hidden_field :curso_id %>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 col-form-label">Assunto*</label>
      <div class="col-md-10">
        <%= form.text_field :assunto, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <%= form.cktext_area :mensagem, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Enviar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', comunicados_path, class: "btn btn-md btn-secondary" %>
  </div>
<% end %>
