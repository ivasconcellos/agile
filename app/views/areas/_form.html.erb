<%= form_with(model: area, local: true) do |form| %>
  <% if area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(badge.errors.count, "erro(s)") %> - Área não pôde ser salva!</h2>

      <ul>
      <% area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">

    <div class="form-group row">
      <label for="inputNome" class="col-md-3 col-form-label">Nome*</label>
      <div class="col-md-9">
        <%= form.text_field :nome, autofocus: true, class: "form-control", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label class="form-check-label col-md-3" for="gridCheck1">Ativa</label>
      <div class="col-md-2 ">
        <div class="form-check">
          <%= form.check_box :ativa, class: "form-check-input" %> Sim
        </div>
      </div>
    </div>

  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', areas_path, class: "btn btn-md btn-secondary" %>
  </div>
<% end %>
