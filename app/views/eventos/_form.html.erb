<%= form_with(model: evento, local: true) do |form| %>
  <% if evento.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(evento.errors.count, "error") %> prohibited this evento from being saved:</h2>
      <ul>
      <% evento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card-body">  

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Data*</label>
      <div class="col-md-6">
        <%= form.date_select :data, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Descrição*</label>
      <div class="col-md-6">
        <%= form.text_field :descricao, class: "form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Alerta</label>
      <div class="col-md-6">
        <%= form.text_field :alerta_eventos, class: "form-control"%>
      </div>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', eventos_path, class: "btn btn-md btn-secondary" %>
  </div>
<%end%>
