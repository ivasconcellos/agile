<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead class="thead-dark">
      <tr>
        <th class="text-center">Aluno</th> 
        <th class="text-center">Pontuação máxima</th>
        <th class="text-center">Nota</th>
        <th class="text-center">Realizada</th> 
        <th class="text-center">Avaliada</th>        
      </tr>
    </thead>
    <tbody>
      <% UsuarioCurso.where("curso_id = ? and perfil = ?",  @perfil.curso.id, "Aluno").order('nickname').each do |aluno| %>
        <tr>
          <td><%= link_to aluno.nickname, notas_aluno_url(aluno_id: aluno.id, curso_id: quiz.missao.modulo.curso.id) %></td>
          <td><%= formata_pontos(quiz.missao.pontuacao) %></td>
          <td><%= link_to minha_nota_quiz(quiz.id, aluno.id), resultado_final_quiz_path(usuario_curso_id: aluno.id, quiz_id: quiz.id)   %></td>
          <td><%= respondido_quiz(quiz.id, aluno.id) %></td>
          <td><%= respondido_quiz(quiz.id, aluno.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>