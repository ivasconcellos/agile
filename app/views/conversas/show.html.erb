<div class="card">

  <div class="card-header">Mensagem</div>

  <ul class="list-group">
    <li class="list-group-item"><b>Destinatário:</b> <%= @conversa. destinatario.nickname %></li>
    <li class="list-group-item"><b>Assunto:</b> <%= @conversa.assunto %></li>
    <li class="list-group-item"><b>Conteúdo:</b> <%= @conversa.mensagem.to_s.html_safe %></li>
    <li class="list-group-item"><b>Enviado em:</b> <%= @conversa.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></li>     
  </ul>

  <br>
  <div class="text-center text-muted">
    <%= link_to 'Voltar',  conversas_path, class: "btn btn-md btn-secondary" %>
  </div>

</div>