<div class="card">
  <div class="card-header">Mensagens por assunto</div>

  <div class="alert alert-success">
		Mensagens trocadas com  o destinatÃ¡rio: <b><%= @destinatario.nickname %></b>.
	</div>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead class="thead-dark">
        <tr>
          <th class="text-center">#</th>
          <th class="text-center">Assunto</th>
          <th class="text-center">Status</th>
        </tr>
      </thead>
      <tbody>
        <% @conversas.each_with_index do |conversa, index| %>
          <tr>
            <td><%= index +1 %></td>
            <td><%= link_to conversa.assunto, controller: 'conversas', action: 'conversas_professor', assunto: conversa.assunto, pessoa_id: @destinatario.id %></td>
            <td><%= mensagem_lida(@perfil, @destinatario, conversa.assunto) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer text-muted">
    <%= link_to 'Voltar',  conversas_path, class: "btn btn-md btn-secondary" %>
  </div>
</div>