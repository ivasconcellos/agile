<h2 class="show">Curso</h2>

<ul class="list-group">
  <li class="list-group-item"><b>Nome:</b> <%= @curso.nome %></li>
  <li class="list-group-item"><b>Descrição:</b> <%= @curso.descricao %></li> 
  <li class="list-group-item"><b>Professor principal:</b> <%= @curso.proprietario.nome %></li>
  <% if @curso.data_inicio %> 
    <li class="list-group-item"><b>Date de início:</b> <%= @curso.data_inicio.strftime("%d/%m/%Y") %></li>
  <% end %>
  <% if @curso.data_termino %>
    <li class="list-group-item"><b>Data de término:</b> <%= @curso.data_termino.strftime("%d/%m/%Y") %></li>
  <% end %>   
  <li class="list-group-item"><b>Ativo:</b> <%= @curso.ativo? ? 'Sim' : 'Não' %></li>
  <li class="list-group-item"><b>Cadastrado em:</b> <%= @curso.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></li>  
  <li class="list-group-item"><b>Tema:</b> <%= @curso.tema_curso.nome %></li>      
</ul>

<br>
<div class="text-center">
  <% if can? :edit, Curso %>
    <%= link_to 'Atualizar', edit_curso_path(@curso), class: "btn btn-md btn-primary" %>
  <% end %>
  <%= link_to 'Voltar', cursos_path, class: "btn btn-md btn-danger" %>
</div>
