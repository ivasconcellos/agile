<div class="card">

  	<div class="card-header">Certificado validado!</div>

  	<div class="card-body">

  		<div class="text-center mb-4">
	    <%= image_tag ("coelho2.png"), class: "mb-4 img-responsive", width: "100", height: "100" %>
	    <h1>AGILE</h1>
  	</div> 

		<div class="row">

		  <div class="col-lg-12">
		    <div class="input-group mb-3">
		      	<p>
		        Certificamos que <b><%= @validacao.usuario.nome %></b>, CPF: <%= @validacao.usuario.cpf %>, foi aprovado no curso <%= @validacao.curso.nome %> com carga horária de <%= @validacao.curso.carga_horaria %> horas, realizado no AVA AGILE, concluído em <%= @validacao.data_finalizacao.strftime("%d/%m/%Y") %>.
		      	</p>
		      	<p>
				  <strong>Código de validação do certificado: </strong>
				  <%= @validacao.hash_validacao %>
				</p>
		    </div>
		  </div>

		</div>
	</div>

</div>
