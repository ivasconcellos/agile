<%= form_with(model: artefato, local: true) do |form| %>
  <% if artefato.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(artefato.errors.count, "erro(s)") %> - Artefato não pôde ser salvo!</h2>

      <ul>
      <% artefato.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <%= form.hidden_field :tema_curso_id %>
  
    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Nome*</label>
      <div class="col-md-8">
        <%= form.text_field :nome, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Pontos requeridos*</label>
      <div class="col-md-8">
        <%= form.number_field :pontos_requeridos, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Imagem*</label>
      <div class="col-md-8">
        <%= form.file_field :imagem, as: :file %>
      </div>
    </div>

    <div class="form-group row">
      <label class="form-check-label col-md-2 offset-md-1" for="gridCheck1">Ativo</label>
      <div class="col-md-2 ">
        <div class="form-check">
          <%= form.check_box :ativo, class: "form-check-input" %> Sim
        </div>
      </div>
    </div>

  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', :back, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
