<%= form_with(model: material, local: true) do |form| %>
  <% if material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(material.errors.count, "erro(s)") %> - Material não pôde ser salvo!</h2>

      <ul>
      <% material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="inputEmail">Nome*</label>
    <%= form.text_field :nome, autofocus: true, class: "form-control" %>    
  </div>

  <div class="form-group">
    <label for="inputEmail">Link</label>
    <%= form.text_field :link, class: "form-control" %>    
  </div>

  <div class="form-group">
    <label for="inputEmail">Descrição*</label>
    <%= form.cktext_area :descricao, class: "form-control" %>    
  </div>

  <div class="form-group">
    <label for="inputEmail">Conteúdo</label>
    <%= form.collection_select(:conteudo_id, Conteudo.order('nome'), :id, :nome, :prompt => true, class: "form-control")%>    
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <br>
<% end %>
