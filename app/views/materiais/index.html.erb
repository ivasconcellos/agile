<p id="notice"><%= notice %></p>

<h1>Materiais</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Link</th>
      <th>Conteudo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materiais.each do |material| %>
      <tr>
        <td><%= material.nome %></td>
        <td><%= material.descricao %></td>
        <td><%= material.link %></td>
        <td><%= material.conteudo %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

