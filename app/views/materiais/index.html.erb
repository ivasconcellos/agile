<h2>Materiais</h2>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th class="text-center">Nome</th>
        <th class="text-center">Descrição</th>
        <th class="text-center">Link</th>
        <th class="text-center">Conteúdo</th>
        <th colspan="3" class="text-center">Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @materiais.each do |material| %>
        <tr>
          <td><%= material.nome %></td>
          <td class="text-center"><%=material.descricao %></td>
          <td class="text-center"><%= material.link %></td>
          <td class="text-center"><%= material.conteudo.nome %></td>
          <% if can? :show, Material %>
            <td><%= link_to 'Visualizar', material %></td>
          <% end %>
          <% if can? :edit, Material %>
            <td><%= link_to 'Atualizar', edit_material_path(material) %></td>
          <% end %>
          <% if can? :destroy, Material %>
            <td><%= link_to 'Excluir', material, method: :delete, data: { confirm: 'Deseja realmente excluir o Material?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<span> <%= will_paginate @materiais %></span>

<br>

<% if can? :new, Material %>
  <div class="text-center">
    <%= link_to 'Cadastrar Material', new_material_path, class: "btn btn-md btn-primary" %>
  </div>
<% end %>