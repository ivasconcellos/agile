<p id="notice"><%= notice %></p>

<h1>Avatares</h1>

<table>
  <thead>
    <tr>
      <th>Tema curso</th>
      <th>Nome</th>
      <th>Perfil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avatares.each do |avatar| %>
      <tr>
        <td><%= avatar.tema_curso %></td>
        <td><%= avatar.nome %></td>
        <td><%= avatar.perfil %></td>
        <td><%= link_to 'Show', avatar %></td>
        <td><%= link_to 'Edit', edit_avatar_path(avatar) %></td>
        <td><%= link_to 'Destroy', avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Avatar', new_avatar_path %>
