<div class="card">
    <div class="card-header">Tema do Curso</div> 

    <div class="row">
    	<div class="col-md-8 offset-md-2">
			<ul class="list-group">
				<li class="list-group-item"><b>Nome:</b> <%= @tema_curso.nome %></li>
				<li class="list-group-item"><b>Ativo:</b> <%= @tema_curso.ativo? ? 'Sim' : 'Não' %></li>
				<li class="list-group-item"><b>Cor do título: </b> <span style="color:<%= @tema_curso.cor_titulo %>; font-size: 50px;">&#9632; </span></li>
				<li class="list-group-item"><b>Cor do texto:</b> <span style="color:<%= @tema_curso.cor_texto %>; font-size: 50px;">&#9632; </span></li>
				<li class="list-group-item"><b>Cor do fundo:</b> <span style="color:<%= @tema_curso.cor_fundo %>; font-size: 50px;">&#9632; </span> </li>
				<li class="list-group-item"><b>Imagem de fundo:</b> <%= image_tag @tema_curso.imagem.url(:thumb) %></li>
			</ul>

			<% if not @avatares.empty? %>

				<div class="card-header">Avatares</div>
				<div class="table-responsive">
				    <table class="table table-striped table-sm">
				      	<thead>
					        <tr>
					          <th class="text-center">Imagem</th>
					          <th class="text-center">Nome</th>
					          <th class="text-center">Perfil</th>
					          <th class="text-center">Tema do Curso</th>
					          <th colspan="3" class="text-center">Opções</th>
					        </tr>
					    </thead>
				      	<tbody>
					        <% @avatares.each do |avatar| %>
					          <tr>
					          	<td><%= image_tag avatar.imagem.url(:thumb), class: "img-responsive img-thumbnail" %></td>
					            <td><%= avatar.nome %></td>
					            <td class="text-center"><%= avatar.perfil %></td>
					            <td class="text-center"><%= avatar.tema_curso.nome %></td>
					            <% if can? :show, Avatar %>
					              <td><%= link_to 'Visualizar', avatar %></td>
					            <% end %>
					            <% if can? :edit, Avatar %>
					              <td><%= link_to 'Atualizar', edit_avatar_path(avatar) %></td>
					            <% end %>
					            <% if can? :destroy, Avatar %>
					              <td><%= link_to 'Excluir', avatar, method: :delete, data: { confirm: 'Deseja realmente excluir o Avatar do Tema do Curso?' } %></td>
					            <% end %>
					          </tr>
					        <% end %>
				      	</tbody>
				    </table>
				</div>
			<% end %>
		</div>
	</div>

	<div class="card-footer text-muted">
		<% if can? :edit, TemaCurso %>
			<%= link_to 'Atualizar', edit_tema_curso_path(@tema_curso), class: "btn btn-md btn-primary " %>
		<% end %>
		<% if can? :new, Avatar %>
			<%= link_to 'Adicionar Avatar', {controller: "avatares", action: "new", tema_curso_id: @tema_curso.id}, class: "btn btn-md btn-success" %>
		<% end %>
		<%= link_to 'Voltar', tema_cursos_path, class: "btn btn-md btn-secondary" %>
	</div>

</div>