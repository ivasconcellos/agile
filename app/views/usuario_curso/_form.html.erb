<%= form_with(model: usuario_curso, local: true) do |form| %>
  <% if usuario_curso.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(usuario_curso.errors.count, "erro(s)") %> - Usuário não pôde ser cadastrado no curso!</h2>

      <ul>
      <% usuario_curso.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :curso_id %>

  <div class="card-body">  
    <% if @perfil.perfil == "Professor" %>

      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Perfil*</label>
        <div class="col-md-6">
          <%= form.select :perfil,  options_for_select([["Aluno", "Aluno"], ["Professor", "Professor"]], form.object.perfil), class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Usuário*</label>
        <div class="col-md-6">
          <%= form.collection_select(:usuario_id, Usuario.where(ativo: true).order('nome'), :id, :nome, :prompt => true, class: "form-control")%>
        </div>
      </div>

    <% end %>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Nickname*</label>
      <div class="col-md-6">
        <%= form.text_field :nickname, class: "form-control" %> 
      </div>
    </div>

    <% if @perfil.grupo_curso %>
      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Avatar</label>
        <div class="col-md-6">
          <% Avatar.where(grupo_id: @perfil.grupo_curso.grupo.id, perfil: @perfil.perfil, ativo: true).each do |avatar| %>
            <p><%= image_tag avatar.imagem.variant(resize: "200x200"), class: "img-responsive img-thumbnail" %></p>
            <p><%= form.radio_button :avatar_id, avatar.id %>
               <%= avatar.nome %></p>
          <% end %>      
        </div>
      </div>
    <% end %>    

  </div>
  
  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', @usuario_curso, class: "btn btn-md btn-secondary" %>
  </div>
<% end %>
