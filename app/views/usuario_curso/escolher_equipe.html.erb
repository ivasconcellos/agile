<div class="card">
    <div class="card-header">Escolher Equipe</div> 
  <%= form_with(model: @usuario_curso, local: true) do |form| %>
    <% if @usuario_curso.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@usuario_curso.errors.count, "erro(s)") %> - Equipe n√£o pode ser atualizada!</h2>

        <ul>
        <% @usuario_curso.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="card-body">

      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Equipe</label>
        <div class="col-md-6">
          <%= form.collection_select(:grupo_curso_id, GrupoCurso.joins(:grupo).where('curso_id = ? and grupos.perfil = ?', current_usuario.curso_atual, @perfil.perfil).order('nome_curso'), :id, :nome_curso, :prompt => true, class: "form-control")%>
        </div>
      </div>

    </div>
    
    <div class="card-footer text-muted">
      <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
      <%= link_to 'Voltar', @usuario_curso, class: "btn btn-md btn-secondary" %>
    </div>
  <% end %>
</div>