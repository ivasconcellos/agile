  <li class="list-group-item"><b>Curso:</b> <%= @usuario_curso.curso.nome %></li>
  <li class="list-group-item"><b>Avatar:</b> <%= image_tag @usuario_curso.avatar.url(:thumb) %></li>
</ul>

<br>
<div class="text-center">
  <% if can? :edit, UsuarioCurso %>
    <%= link_to 'Atualizar', edit_usuario_curso_path(@usuario_curso), class: "btn btn-md btn-primary" %>
  <% end %>
  <%= link_to 'Voltar', usuario_curso_index_path, class: "btn btn-md btn-danger" %>
</div>