<div class="card">

  	<div class="card-header">Ranking do curso</div>

  	<div class="card-body">

  		<div class="table-responsive">
      	<table class="table table-striped table-sm">
	        <thead>
	          <tr>
	          	<th class="text-center">Posição</th>
	            <th class="text-center">Nickname</th>
	            <th class="text-center">Pontuação</th>
	            <th class="text-center">Nível</th>
	            <th class="text-center">Grupo</th>
	          </tr>
	        </thead>
	        <tbody>
	          <% @alunos.each_with_index do |aluno, index| %>
	            <tr>
					<td><%= "#{index+1}º" %></td>
					<td><%= link_to "#{aluno.nickname}", aluno %></td>
					<td><%= aluno.pontos_experiencia %></td>
					<td><%= aluno.nivel.nome %></td>
					<% if aluno.grupo_curso %>
						<td><%= aluno.grupo_curso.grupo.nome %></td>
					<% else %>
						<td>-</td>
					<% end %>
	            </tr>
	          <% end %>
	        </tbody>
	      </table>
	    </div>
        <%= will_paginate @alunos %>
	</div>

	<br>
</div>
