<div class="card">

  <div class="card-header">Resultado do Quiz</div>

  <div class="card-body">
    <div class="row alert alert-secondary">
      <div class="col-lg-12">
        <div class="input-group">
          <p class="text-center"><b>Quiz:</b> <%= @missao.quiz.nome %></p>
        </div>
      </div>
    </div>
    
    <% @quiz_resposta_alunos.each_with_index do |aluno, index| %>
      <div class="row alert alert-info">
        <div class="col-lg-12">
          <div class="input-group">
            <p><label><%= index + 1 %>ª Pergunta: </label> </p>
            <p><%= aluno.quiz_pergunta_resposta.quiz_pergunta.descricao.html_safe %></p>
          </div>        
        </div>

        <div class="col-lg-12">
          <div class="input-group">
            <p><label>Pontuação da pergunta:</label> <%= formata_pontos(aluno.quiz_pergunta_resposta.quiz_pergunta.pontuacao) %></p>
          </div>        
        </div>

        <div class="col-lg-12">
          <div class="input-group mb-3 alert alert-light">
            <p><label>Resposta salva:</label> <%= resposta_correta(aluno.quiz_pergunta_resposta) %></p>
          </div>        
        </div>
      </div>
    <% end %>
 
  </div>

  <br>
  <div class="card-footer text-muted">
    <%= link_to 'Voltar', @missao, class: "btn btn-md btn-secondary" %>
  </div>

</div>
