<%= form_with(model: modulo, local: true) do |form| %>
  <% if modulo.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(modulo.errors.count, "erro(s)") %> - Módulo não pôde ser salvo!</h2>

      <ul>
      <% modulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">

    <div class="form-group row">
      <label for="inputNome" class="col-md-3 col-form-label">Nome*</label>
      <div class="col-md-9">
        <%= form.text_field :nome, autofocus: true, class: "form-control", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputTexto" class="col-md-3 col-form-label">Descrição</label>
      <div class="col-md-9">
        <%= form.text_area :descricao, class: "form-control", placeholder: "Será exibida no começo de cada módulo." %>
      </div>
    </div>

    <div class="form-group row">
      <label class="form-check-label col-md-3" for="gridCheck1">Público</label>
      <div class="col-md-2 ">
        <div class="form-check">
          <%= form.check_box :publico, class: "form-check-input" %> Sim
        </div>
      </div>        
    </div>
  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', modulos_path, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
