<%= form_with(model: explicacao, local: true) do |form| %>
  <% if explicacao.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(explicacao.errors.count, "erro(s)") %> - Explicação não pôde ser salva!</h2>

      <ul>
      <% explicacao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <%= form.hidden_field :modulo_id %>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-1 col-form-label">Nome*</label>
      <div class="col-md-8">
        <%= form.text_field :nome, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputDescricao" class="col-md-2 offset-md-1 col-form-label">Descrição*</label>
      <div class="col-md-8">
        <%= form.cktext_area :descricao, class: "form-control" %> 
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', @explicacao.modulo.curso, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
