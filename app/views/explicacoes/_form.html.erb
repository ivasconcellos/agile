<%= form_with(model: explicacao, local: true) do |form| %>
  <% if explicacao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(explicacao.errors.count, "erro(s)") %> - Curso não pôde ser salvo!</h2>

      <ul>
      <% explicacao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="inputEmail">Nome*</label>
    <%= form.text_field :nome, autofocus: true, class: "form-control" %>    
  </div>

  <div class="form-group">
    <label for="inputEmail">Descrição</label>
    <%= form.text_area :descricao, class: "form-control" %>    
  </div>

  <div class="form-group">
    <label for="inputEmail">Áudio</label>
    <%= form.text_field :audio, class: "form-control" %>    
  </div>

  <div class="form-group">
    <label for="inputEmail">Conteúdo</label>
    <%= form.collection_select(:conteudo_id, Conteudo.all.order('nome'), :id, :nome, :prompt => true, class: "form-control")%>    
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <br>
<% end %>
