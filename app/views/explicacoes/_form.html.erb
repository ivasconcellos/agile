<%= form_with(model: explicacao, local: true) do |form| %>
  <% if explicacao.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(explicacao.errors.count, "erro(s)") %> - Curso não pôde ser salvo!</h2>

      <ul>
      <% explicacao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <%= form.hidden_field :modulo_id %>

    <% if not @explicacao.modulo_id %>

      <div class="form-group row">
        <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Módulo*</label>
        <div class="col-md-6">
          <%= form.collection_select(:modulo_id, Modulo.where(curso_id: current_usuario.curso_atual).order('nome'), :id, :nome, :prompt => true, class: "form-control") %>
        </div>
      </div>
    <% end %>

    <div class="form-group row">
      <label for="inputNome" class="col-md-2 offset-md-2 col-form-label">Nome*</label>
      <div class="col-md-6">
        <%= form.text_field :nome, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
        <label for="inputDescricao" class="col-md-2 offset-md-2 col-form-label">Descrição*</label>
        <div class="col-md-6">
          <%= form.cktext_area :descricao, class: "form-control" %> 
        </div>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    <%= form.submit "Salvar", class: "btn btn-md btn-primary" %>
    <%= link_to 'Voltar', explicacoes_path, class: "btn btn-md btn-secondary" %>
  </div>

<% end %>
