<div class="card">

  <div class="card-header">Explicação</div>

	<ul class="list-group">
	  <li class="list-group-item"><b>Nome:</b> <%= @explicacao.nome %></li>
	  <li class="list-group-item"><b>Descrição:</b> <%= @explicacao.descricao.to_s.html_safe %></li>
	  <li class="list-group-item"><b>Cadastrada em:</b> <%= @explicacao.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></li>  
	  <li class="list-group-item"><b>Módulo:</b> <%= link_to @explicacao.modulo.nome, @explicacao.modulo %></li>      
	</ul>

	<br>

	<div class="card-footer text-muted">
	  <% if can? :edit, Explicacao %>
	    <%= link_to 'Atualizar', edit_explicacao_path(@explicacao), class: "btn btn-md btn-primary" %>
	  <% end %>
	  <%= link_to 'Voltar', explicacoes_path, class: "btn btn-md btn-secondary" %>
	</div>
</div>
