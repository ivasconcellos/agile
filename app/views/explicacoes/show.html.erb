<div class="card">

	<div class="card-header">Explicação
	    <% if can? :edit, Explicacao %>
	      <%= link_to '', edit_explicacao_path(@explicacao), class: "fa fa-edit text-white" %>
	    <% end %>
	    <% if can? :destroy, Explicacao %>
	      <%= link_to '', @explicacao, method: :delete, data: { confirm: 'Deseja realmente excluir a Explicação?' }, class: "fa fa-trash text-white" %>
	    <% end %>
	</div>

	<div class="row">
	    <div class="col-md-10 offset-md-1">
			<ul class="list-group">
			  <li class="list-group-item"><b>Nome:</b> <%= @explicacao.nome %></li>
			  <li class="list-group-item"><b>Descrição:</b> <%= @explicacao.descricao.to_s.html_safe %></li>
			  <li class="list-group-item"><b>Cadastrada em:</b> <%= @explicacao.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></li>  
			  <li class="list-group-item"><b>Módulo:</b> <%= link_to @explicacao.modulo.nome, @explicacao.modulo %></li>      
			</ul>
		</div>
	</div>

	<br>

	<div class="card-footer text-muted">
	  <%= link_to 'Voltar', @explicacao.modulo, class: "btn btn-md btn-secondary" %>
	</div>
</div>
