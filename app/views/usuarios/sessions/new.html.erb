<div class="col-md-4 offset-md-4 col-sm-10 offset-sm-1">

  <div class="text-center mb-4">
    <%= image_tag ("coelho2.png"), class: "mb-4 img-responsive", width: "100", height: "100" %>
    <h1 class="agile">AGILE</h1>
  </div>   

  <div class="card card-login mx-auto mt-6">
    <div class="card-header">Login</div> 
          
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="card-body">
        <div class="form-group">
          <label for="inputEmail">E-mail</label>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>    
        </div>

        <div class="form-group">
          <label for="inputpassword">Senha</label>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %> 
        </div>

        <div class="text-center">
          <%= f.submit "Acessar", class: "btn btn-lg btn-primary btn-block" %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Cadastrar", new_registration_path(resource_name), class: "btn btn-lg btn-success btn-block" %><br />
          <% end -%>
          <%= render "usuarios/shared/links" %>
        </div>
      </div>
    <% end %>
  
  </div>
</div>